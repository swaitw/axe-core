{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Karma test:debug",
      "address": "localhost",
      "port": 9765, // keep in sync with debugPort in karma.conf.js
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "*": "${webRoot}/*",
        "base/*": "${webRoot}/*"
      }
    }
  ]
}
